<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.quisina.battlehackcustomer" >


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".BattlehackCustomerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="AA_MODELS"
            android:value="de.quisina.battlehackcustomer.models.Account, de.quisina.battlehackcustomer.models.Meal, de.quisina.battlehackcustomer.models.Order" />
        <meta-data
            android:name="AA_DB_NAME"
            android:value="quisina.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".ui.DetailOrderActivity"
            android:label="@string/title_activity_detail_order" >
        </activity>
    </application>

</manifest>
