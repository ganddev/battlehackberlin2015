<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/circle_label_tv"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/white"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/circle_background"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_toRightOf="@id/circle_label_tv"
        android:textColor="@color/history_header"
        android:id="@+id/history_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"/>

    <TextView

        android:layout_toRightOf="@id/circle_label_tv"
        android:textColor="@color/history_subline"
        android:layout_below="@id/history_label_tv"
        android:id="@+id/history_time_tv"
        android:paddingBottom="20dp"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/duration_tv"/>

</RelativeLayout>